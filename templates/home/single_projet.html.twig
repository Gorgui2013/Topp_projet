{% extends 'home.html.twig' %}

{% block body %}
    <div class="container py-3">
        <div class="row">
            <div class="col-sm-6">
                <p><strong>{{projet.name}}</strong> de {{projet.begin | date('d M y')}} Ã  {{projet.end | date('d M y')}} | <a href="#editprojet" data-bs-toggle="modal"><i class="fas fa-edit" style="color:#111"></i></a></p>
            </div>
            <div class="col-sm-6" align="right">
                <a href="#newstep" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"><i class="fas fa-plus"></i> Etape</a>
                {% if projet.steps | length != 0 %}
                    <a href="#newtask" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal"><i class="fas fa-plus"></i> tache</a>
                {% endif %}
            </div>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                  {{ message }}
              </div>
          {% endfor %}
      </div>
      <hr>
      <div class="row scroller.task">
        {% include 'home/steps.html.twig' %}
    </div>
</div>

{% include 'home/newstep.html.twig' %}
{% include 'home/editprojet.html.twig' %}
{% endblock %}
